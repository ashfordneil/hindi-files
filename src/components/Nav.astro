---
interface Props {
    readonly title?: string;
}
const { title } = Astro.props;

import githubLogo from '@fortawesome/fontawesome-free/svgs/brands/github.svg';
---
<style>
    nav {
        background-color: lightblue;
        padding: 0.5rem 1ch;

        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    h2 {
        margin: 0;
    }

    span::before {
        content: "â€”";
        padding: 0 0.5ch;
    }

    @media (max-width: 80ch) {
        span {
            display: block;
        }
        span::before {
            display: none;
        }
    }

    img {
        width: 1rem;
        vertical-align: middle;
    }
</style>

<nav>
    {title
        ?
            <h2>
                <a href="/">Neil&rsquo;s Hindi Files</a>
                <span>{title}</span>
            </h2>
        :
            <h2>
                Neil&rsquo;s Hindi Files
            </h2>
    }
    <a href="https://github.com/ashfordneil/hindi-files">
        Fork me on
        <img src={githubLogo.src} alt="Github"/>
    </a>
</nav>